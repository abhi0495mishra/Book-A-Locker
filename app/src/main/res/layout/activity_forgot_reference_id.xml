<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="90dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_enter_registered_mobile_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your registeted Mobile Number"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_text_enter_registered_mobile_number"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:hint="Enter Mobile No." />

    <Button
        android:id="@+id/get_otp_btn_forgotRef_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="phone"
        android:text="Get OTP" />

    <EditText
        android:id="@+id/edit_text_Enter_Otp_forgotRef_page"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="15dp"
        android:gravity="center"
        android:hint="Enter OTP"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/button_verify_otp_forgotRef_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:enabled="false"
        android:text="Verify OTP"
        android:textAllCaps="false" />

    <ProgressBar
        android:id="@+id/progress_bar_forgotRef_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/text_view_reference_id_from_DB"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_view_back_to_login_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:gravity="center"
        android:linksClickable="true"
        android:text="Back to Login Page"
        android:textStyle="italic" />


</LinearLayout>